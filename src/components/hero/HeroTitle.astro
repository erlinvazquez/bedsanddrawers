---
interface Props {
  title: string;
  description: string;
  stats: {
    reviews: number;
    products: number;
  };
}

const { title, description, stats } = Astro.props;
---

<div class="flex flex-col space-y-6 text-center sm:text-left max-w-[90%] sm:max-w-2xl">
  <div class="space-y-2">
    <div class="flex items-center justify-center sm:justify-start gap-2 text-yellow-400">
      {[...Array(5)].map(() => (
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
      ))}
      <span class="text-sm text-gray-200">{stats.reviews.toLocaleString()} reviews</span>
    </div>
    <p class="text-gray-300 text-sm">{stats.products.toLocaleString()} products waiting for you</p>
  </div>
  
  <div class="space-y-4">
    <h1 
      class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight text-white leading-tight"
      aria-label="Find your perfect bed and drawer in minutes">
      <span class="block">Find your perfect</span>
      <span class="block mt-2">bed and drawer</span>
      <span class="block mt-2">in  <span class="text-yellow-400">⚡</span>  minutes.</span>
    </h1>
    
    <p class="text-lg sm:text-xl text-gray-300 max-w-prose" aria-label="Product description">
      {description}
    </p>
    
    <ul class="mt-8 space-y-4 text-gray-300 text-base sm:text-lg" role="list" aria-label="Key features">
      <li class="flex items-center gap-3">
        <span class="text-primary flex-shrink-0" aria-hidden="true">✓</span>
        <span><span class="underline decoration-2">Thousands</span> of verified retailers</span>
      </li>
      <li class="flex items-center gap-3">
        <span class="text-primary flex-shrink-0" aria-hidden="true">✓</span>
        <span>5 minute <span class="underline decoration-2">recommendation</span> process</span>
      </li>
      <li class="flex items-center gap-3">
        <span class="text-primary flex-shrink-0" aria-hidden="true">✓</span>
        <span><span class="underline decoration-2">Responses</span> within 1st hour</span>
      </li>
      <li class="flex items-center gap-3">
        <span class="text-primary flex-shrink-0" aria-hidden="true">✓</span>
        <span><span class="underline decoration-2">Secure</span> and safe browsing</span>
      </li>
    </ul>
  </div>
</div>