---
import BaseHead from '../../components/BaseHead.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { products } from '../../data/products';
import { COMPANY_NAME } from '../../consts';
import { formatPrice } from '../../utils/price';

export function getStaticPaths() {
  return products.map(product => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead 
      title={`${product.title} | ${COMPANY_NAME}`}
      description={product.description}
    />
    <link rel="canonical" href={`${Astro.site}product/${product.id}`} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Product",
        "name": "${product.title}",
        "description": "${product.description}",
        "image": "${product.image}",
        "brand": {
          "@type": "Brand",
          "name": "${COMPANY_NAME}"
        },
        "offers": {
          "@type": "Offer",
          "price": "${product.price}",
          "priceCurrency": "USD"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "${product.rating}",
          "reviewCount": "5"
        }
      }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <Navigation />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-gray-500">
          <li><a href="/" class="hover:text-gray-700">Home</a></li>
          <li>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li><a href={`/category/${product.category.toLowerCase()}`} class="hover:text-gray-700">{product.category}</a></li>
          <li>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </li>
          <li class="text-gray-700">{product.title}</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div class="aspect-w-3 aspect-h-2 rounded-lg overflow-hidden bg-gray-100">
            <img
              src={product.image}
              alt={product.title}
              class="w-full h-full object-cover object-center"
            />
          </div>
        </div>
        
        <div>
          <h1 class="text-3xl font-bold text-gray-900">{product.title}</h1>
          <p class="mt-2 text-sm text-purple-600">{product.category}</p>
          
          <div class="mt-4 flex items-center">
            <div class="flex">
              {[...Array(5)].map((_, i) => (
                <svg
                  class={`w-5 h-5 ${i < product.rating ? 'text-yellow-400' : 'text-gray-300'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="ml-2 text-sm text-gray-500">{product.rating} out of 5</span>
          </div>
          
          <div class="mt-8 space-y-6">
            <div>
              <h2 class="text-lg font-medium text-gray-900">Description</h2>
              <p class="mt-2 text-gray-600">{product.description}</p>
            </div>
            
            <div>
              <h2 class="text-lg font-medium text-gray-900">Features</h2>
              <ul class="mt-4 space-y-2">
                {product.features.map(feature => (
                  <li class="flex items-center">
                    <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="ml-2">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div>
              <h2 class="text-lg font-medium text-gray-900">Specifications</h2>
              <dl class="mt-4 grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
                {Object.entries(product.specifications).map(([key, value]) => (
                  <div>
                    <dt class="text-sm font-medium text-gray-500">{key.charAt(0).toUpperCase() + key.slice(1)}</dt>
                    <dd class="mt-1 text-sm text-gray-900">{value}</dd>
                  </div>
                ))}
              </dl>
            </div>
          </div>
          
          <div class="mt-8 flex items-center justify-between">
            <span class="text-3xl font-bold text-gray-900">{formatPrice(product.price)}</span>
            <a
              href={product.affiliateLink}
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700"
              target="_blank"
              rel="nofollow noopener"
            >
              Buy Now
            </a>
          </div>
        </div>
      </div>
    </main>
    
    <Footer />
  </body>
</html>