---
interface Props {
  title: string;
  excerpt: string;
  image: string;
  href: string;
}

const { title, excerpt, image, href } = Astro.props;
---

<article class="bg-white rounded-lg overflow-hidden shadow-md">
  <img
    src={image}
    alt={title}
    class="w-full h-48 object-cover"
  />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">
      {title}
    </h3>
    <p class="text-gray-600 mb-4">
      {excerpt}
    </p>
    <a href={href} class="text-blue-600 hover:underline">
      Read More â†’
    </a>
  </div>
</article>