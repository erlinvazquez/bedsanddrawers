---
interface Props {
  title: string;
  categories: {
    name: string;
    href: string;
    count: number;
  }[];
}

const { title, categories } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-lg font-semibold mb-4">{title}</h2>
  <ul class="space-y-2">
    {categories.map((category) => (
      <li>
        <a href={category.href} class="flex justify-between items-center text-gray-600 hover:text-purple-600">
          <span>{category.name}</span>
          <span class="bg-gray-100 px-2 py-1 rounded-full text-sm">{category.count}</span>
        </a>
      </li>
    ))}
  </ul>
</div>