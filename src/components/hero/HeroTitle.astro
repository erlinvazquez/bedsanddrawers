---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="flex flex-col space-y-4 text-center sm:text-left max-w-[90%] sm:max-w-2xl">
  <h1 class="text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight text-white leading-tight">
    {title}
  </h1>
  
  <h2 class="text-base sm:text-lg md:text-xl text-gray-300">
    {description}
  </h2>
</div>