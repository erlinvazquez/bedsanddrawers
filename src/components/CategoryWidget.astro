---
interface Props {
  title: string;
  description: string;
  image: string;
  href: string;
}

const { title, description, image, href } = Astro.props;
---

<a href={href} class="group block bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <div class="relative h-48 overflow-hidden">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
  </div>
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600 transition-colors">
      {title}
    </h3>
    <p class="text-gray-600 line-clamp-2">
      {description}
    </p>
  </div>
</a>

<style>
  .text-primary-600 {
    color: #4F46E5;
  }
</style>