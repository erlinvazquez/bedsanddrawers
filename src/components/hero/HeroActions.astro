---
import Button from '../ui/Button.astro';
import TrustIndicator from './TrustIndicator.astro';

interface Props {
  currentLocale: string;
  exploreText: string;
}

const { currentLocale, exploreText } = Astro.props;
---

<div class="flex flex-col space-y-6 items-center sm:items-start">
  <div class="w-full sm:w-auto">
    <Button 
      href={`/${currentLocale}/beds`} 
      variant="primary"
      className="w-full sm:w-auto justify-center text-base sm:text-lg px-6 py-3"
    >
      Explore all the catalog
    </Button>
  </div>



  <TrustIndicator content={exploreText} rating={4.9} reviewCount={2500} />
</div>