---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import CategoryWidget from '../components/CategoryWidget.astro';
import Footer from '../components/Footer.astro';
import { products, categories } from '../data/products';
import { SITE_TITLE, SITE_DESCRIPTION, COMPANY_NAME, COMPANY_ADDRESS } from '../consts';

const featuredProducts = products.slice(0, 4);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="canonical" href={Astro.site} />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FurnitureStore",
        "name": "${COMPANY_NAME}",
        "description": "${SITE_DESCRIPTION}",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "${COMPANY_ADDRESS}"
        },
        "priceRange": "$$",
        "openingHours": "Mo-Sa 09:00-20:00"
      }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <Navigation />
    <Hero />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <div class="lg:col-span-3">
          <section>
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Products</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {featuredProducts.map((product) => (
                <ProductCard {...product} />
              ))}
            </div>
          </section>
          
          <section class="mt-16">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Why Choose Us</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
              <div class="text-center">
                <div class="bg-purple-100 rounded-full p-4 w-16 h-16 mx-auto mb-4">
                  <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Premium Quality</h3>
                <p class="text-gray-600">Crafted with the finest materials for lasting durability</p>
              </div>
              <div class="text-center">
                <div class="bg-purple-100 rounded-full p-4 w-16 h-16 mx-auto mb-4">
                  <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Fast Delivery</h3>
                <p class="text-gray-600">Quick and reliable shipping to your doorstep</p>
              </div>
              <div class="text-center">
                <div class="bg-purple-100 rounded-full p-4 w-16 h-16 mx-auto mb-4">
                  <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <h3 class="text-lg font-semibold mb-2">Warranty</h3>
                <p class="text-gray-600">Extended warranty on all our products</p>
              </div>
            </div>
          </section>
        </div>
        
        <div class="lg:col-span-1">
          <CategoryWidget 
            title="Browse Categories" 
            categories={categories}
          />
        </div>
      </div>
    </main>
    
    <Footer />
  </body>
</html>