---
import BaseHead from '../components/BaseHead.astro';
import MainNav from '../components/navigation/MainNav.astro';
import { SITE_TITLE } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead 
      title={`Page Not Found | ${SITE_TITLE}`}
      description="The page you're looking for doesn't exist."
    />
  </head>
  <body class="min-h-screen bg-gray-50">
    <MainNav />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
      <div class="max-w-xl mx-auto text-center">
        <p class="text-sm font-semibold text-purple-600 uppercase tracking-wide">404 error</p>
        <h1 class="mt-2 text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">
          Page not found
        </h1>
        <p class="mt-4 text-lg text-gray-500">
          The page you're looking for doesn't exist or has been moved.
        </p>
        <div class="mt-8">
          <a
            href="/"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700"
          >
            Go back home
          </a>
        </div>
      </div>
    </main>
  </body>
</html>