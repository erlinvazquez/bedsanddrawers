---
interface QA {
  question: string;
  answer: string;
}

interface Props {
  questions: QA[];
}

const { questions } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-semibold text-gray-900">Questions & answers</h2>
    <button class="text-sm text-gray-600 hover:text-gray-900">
      See all
      <span class="sr-only">questions</span>
    </button>
  </div>
  
  <div class="space-y-6">
    {questions.map((qa) => (
      <div>
        <h3 class="font-medium text-gray-900">Q: {qa.question}</h3>
        <p class="text-sm text-gray-600 mt-2">A: {qa.answer}</p>
      </div>
    ))}
  </div>
</div>