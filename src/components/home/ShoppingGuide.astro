---

<section class="bg-white py-16" id="shopping-guide">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">Furniture Shopping Guide</h2>
      <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
        Everything you need to know to make the perfect choice for your home
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <div class="lg:col-span-8">
        <div class="space-y-8">
          <FactorsToConsider 
            factors={factors} 
            title="Key Considerations" 
          />
          <PopularBrands 
            brands={brands} 
          />
        </div>
      </div>
      
      <div class="lg:col-span-4 space-y-8">
        <PriceRangeFilter 
          ranges={priceRanges} 
          selectedRange={priceRanges[0].label}
        />
        <QuestionsAnswers 
          questions={questions} 
        />
      </div>
    </div>
  </div>
</section>