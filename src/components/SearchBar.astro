<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="relative">
    <input
      type="search"
      placeholder="Search for luxury beds, designer drawers..."
      class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-500 text-gray-900"
      aria-label="Search products"
    />
    <button
      class="absolute right-3 top-1/2 -translate-y-1/2"
      aria-label="Submit search"
    >
      <svg
        class="w-5 h-5 text-gray-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>
    </button>
  </div>
</div>