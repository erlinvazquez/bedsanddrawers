---
import { COMPANY_NAME } from '../consts';
import { getLocaleFromUrl } from '../i18n/utils';

interface Props {
  className?: string;
}

const { pathname } = Astro.url;
const currentLocale = getLocaleFromUrl(pathname);
const { className = "" } = Astro.props;
---

<a 
  href={`/${currentLocale}/`} 
  class={`inline-flex flex-col items-center ${className}`}
  aria-label={COMPANY_NAME}
>
  <span class="text-3xl font-extrabold tracking-tighter">
    <span class="text-purple-600">B</span>
    <span class="text-gray-400">&</span>
    <span class="text-purple-600">D</span>
  </span>
  <span class="text-xs text-gray-400 -mt-1">beds & drawers</span>
</a>

<style>
  .text-purple-600 {
    color: #7c3aed;
  }
</style>
