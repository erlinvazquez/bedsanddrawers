---
import type { Category } from '../types';
import type { Locale } from '../consts';

interface Props {
  categories: Category[];
  title: string;
  locale: Locale;
}

const { categories, title, locale } = Astro.props;
---

<section class="bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category) => (
        <a 
          href={`/${locale}/${category.slug}`}
          class="group block bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-lg transition-shadow duration-300"
        >
          <div class="aspect-w-3 aspect-h-2">
            <img
              src={category.image}
              alt={category.name}
              class="w-full h-full object-center object-cover group-hover:opacity-90 transition-opacity duration-300"
            />
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-1 group-hover:text-indigo-600">
              {category.name}
            </h3>
            <p class="text-sm text-gray-600">
              {category.description}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
