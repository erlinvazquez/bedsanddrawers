---
import Button from '../ui/Button.astro';

interface Props {
  currentLocale: string;
  exploreText: string;
}

const { currentLocale, exploreText } = Astro.props;
---

<div class="flex flex-col space-y-4">
  <div class="flex flex-col sm:flex-row gap-4">
    <Button href={`/${currentLocale}/beds`} variant="primary">
      Explore all the catalog
    </Button>
    
  </div>

  <a 
    href="#featured-collection" 
    class="text-gray-300 hover:text-white text-sm underline underline-offset-2"
  >
    {exploreText}
  </a>
</div>