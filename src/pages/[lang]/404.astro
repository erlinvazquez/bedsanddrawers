---
import Layout from '../../layouts/Layout.astro';
import { LOCALES, type Locale } from '../../consts';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return LOCALES.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;
const currentLocale = lang as Locale;
const t = useTranslations(currentLocale);
---

<Layout 
  title={t('404.title')}
  description={t('404.description')}
  locale={currentLocale}
>
  <main class="min-h-screen bg-gray-50 flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-max mx-auto text-center">
      <p class="text-sm font-semibold text-blue-600 uppercase tracking-wide">404 error</p>
      <h1 class="mt-2 text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">
        {t('404.title')}
      </h1>
      <p class="mt-2 text-lg text-gray-500">
        {t('404.message')}
      </p>
      <div class="mt-6">
        <a
          href={`/${currentLocale}`}
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          {t('404.backHome')}
        </a>
      </div>
    </div>
  </main>
</Layout>
