---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<article class="group relative overflow-hidden rounded-lg shadow-md transition-all hover:shadow-lg">
  <a href={link} class="block">
    <div class="aspect-w-16 aspect-h-9 overflow-hidden">
      <img 
        src={image} 
        alt={title}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    <div class="p-6">
      <h3 class="mb-2 text-xl font-semibold text-gray-900 group-hover:text-purple-600">
        {title}
      </h3>
      <p class="text-gray-600">
        {description}
      </p>
    </div>
  </a>
</article>