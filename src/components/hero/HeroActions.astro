---
import Button from '../ui/Button.astro';
import TrustIndicator from './TrustIndicator.astro';
import { useTranslations } from '../../i18n/utils';
import type { Locale } from '../../consts';

interface Props {
  currentLocale: Locale;
  exploreText: string;
}

const { currentLocale, exploreText } = Astro.props;
const t = useTranslations(currentLocale);
---

<div class="flex flex-col space-y-6 items-center sm:items-start">
  <div class="w-full sm:w-auto">
    <Button 
      href={`/${currentLocale}/categories`} 
      variant="primary"
      className="w-full sm:w-auto justify-center text-base sm:text-lg px-6 py-3"
    >
      {t('common.categories')}
    </Button>
  </div>

  <TrustIndicator content={exploreText} />
</div>