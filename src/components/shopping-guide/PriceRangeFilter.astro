---
interface PriceRange {
  label: string;
  min: number;
  max?: number;
}

interface Props {
  ranges: PriceRange[];
  selectedRange?: string;
}

const { ranges, selectedRange } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-6 mb-6">
  <h2 class="text-lg font-semibold text-gray-900 mb-4">Shop by price</h2>
  <div class="flex flex-wrap gap-2">
    <button 
      class={`px-4 py-2 rounded-full text-sm ${!selectedRange ? 'bg-blue-50 text-blue-700' : 'border border-gray-200 text-gray-700 hover:bg-gray-50'}`}
    >
      All prices ($)
    </button>
    {ranges.map((range) => (
      <button
        class={`px-4 py-2 rounded-full text-sm ${selectedRange === range.label ? 'bg-blue-50 text-blue-700' : 'border border-gray-200 text-gray-700 hover:bg-gray-50'}`}
      >
        {range.max ? `$${range.min} - $${range.max}` : `$${range.min}+`}
      </button>
    ))}
  </div>
</div>